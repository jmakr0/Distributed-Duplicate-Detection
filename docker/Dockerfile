FROM java:8-jre

ENV ROLE=${ROLE}
ENV WORKERS=${WORKERS}
ENV PATH_DATA=${PATH_DATA}
ENV PATH_GOLD_STANDARD=${PATH_GOLD_STANDARD}
ENV MASTER_PORT=${MASTER_PORT}
ENV MASTER_HOST=${MASTER_HOST}

RUN mkdir /app

COPY tmp/* /app

WORKDIR /app

CMD java -jar *.jar $ROLE \
        -w=$WORKERS \
        -d=$PATH_DATA \
        -g=$PATH_GOLD_STANDARD \
        -mh=$MASTER_PORT \
        -mp=$MASTER_HOST
